<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:orientation="vertical">

        <site.hanschen.pretty.widget.ViewPagerCatchException
            android:id="@+id/gallery_content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <site.hanschen.pretty.ui.gallery.GalleryRecyclerView
            android:id="@+id/gallery_horizontal_list"
            android:layout_width="match_parent"
            android:layout_height="96dp"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentTop="true"
        android:background="#99000000">

        <ImageButton
            android:id="@+id/gallery_back_btn"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/bg_ripple_rectangle"
            android:contentDescription="@string/app_name"
            android:src="@drawable/back_picture_selector"/>

        <ImageButton
            android:id="@+id/gallery_delete_btn"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/bg_ripple_rectangle"
            android:contentDescription="@string/app_name"
            android:src="@drawable/icon_menu_delete"/>

        <ImageButton
            android:id="@+id/gallery_share_btn"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_toLeftOf="@+id/gallery_delete_btn"
            android:layout_toStartOf="@+id/gallery_delete_btn"
            android:background="@drawable/bg_ripple_rectangle"
            android:contentDescription="@string/app_name"
            android:src="@drawable/icon_share_selector"/>
    </RelativeLayout>
</RelativeLayout>

